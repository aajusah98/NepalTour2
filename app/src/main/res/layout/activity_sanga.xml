<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sanga"
    android:orientation="vertical"
    android:background="#FF21D4D4"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kailashnath Mahadev Statue (Nepali: कैलाशनाथ महादेव) is the world's tallest Shiva statue.
            It is situated in Sanga, on the border of the Bhaktapur and Kavrepalanchwok districts in Nepal,
            about 20 km from Kathmandu.    The statue is 143 feet (43.5 m) in height, and was made using copper, zinc, concrete, and steel
            According to the List of statues by height
            Kailashnath Mahadev is the world's fortieth-tallest statue
            four places after the Statue of Liberty."
            android:textSize="15dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sanga"
            android:layout_weight="100"
            />
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu"
            android:id="@+id/bnav"
            android:layout_alignParentBottom="true"
            >
        </android.support.design.widget.BottomNavigationView>
    </LinearLayout>
</RelativeLayout>