<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".third"
    android:background="#0b0b0b"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Most Popular Cities"
        android:textSize="22dp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textColor="#ffff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kathmandu"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="kathmandu"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pokhara"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="pokhara"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kathmandu"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokhara"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        >

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mustang"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="mustang"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jankpur"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="jankpur"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mustang"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Janakpur"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dharan"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/namchebazar"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dharan"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Namche Bazaar"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>



</LinearLayout>